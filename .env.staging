# Application
NODE_ENV=staging
PORT=3000

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=${STAGING_NEO4J_PASSWORD}

# AI Services - Using development keys with rate limiting
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}
PINECONE_API_KEY=${STAGING_PINECONE_API_KEY}
PINECONE_ENVIRONMENT=${STAGING_PINECONE_ENV}

# Monitoring
GRAFANA_ADMIN_PASSWORD=${STAGING_GRAFANA_PASSWORD}

# Logging - Verbose for staging
LOG_LEVEL=debug
LOG_FORMAT=json

# Performance Tuning - Limited for staging
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
MAX_DOCUMENT_SIZE_MB=5

# Feature Flags - All enabled for testing
ENABLE_PATTERN_DETECTION=true
ENABLE_RELATIONSHIP_MAPPING=true
ENABLE_TIMELINE_GENERATION=true

# Cache Configuration - Smaller for staging
CACHE_TTL_SECONDS=1800
CACHE_MAX_SIZE_MB=500

# Security
JWT_SECRET=${STAGING_JWT_SECRET}
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Rate Limiting - More restrictive for staging
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50

# AI Model Configuration - Conservative settings
DEFAULT_MODEL=gpt-4
MODEL_TIMEOUT_MS=15000
MAX_TOKENS=1000
TEMPERATURE=0.3

# Document Processing - Limited sizes for staging
MAX_EMAIL_SIZE_KB=5000
MAX_DOCUMENT_SIZE_KB=10000
MAX_MESSAGE_SIZE_KB=2500

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage/staging
MAX_STORAGE_SIZE_GB=5

# Development Tools - Enabled for staging
ENABLE_DEBUG_LOGGING=true
ENABLE_API_DOCS=true
ENABLE_PLAYGROUND=true

# Testing
TEST_TIMEOUT_MS=5000
MOCK_EXTERNAL_SERVICES=false

# Deployment
DEPLOYMENT_ENV=staging
ENABLE_AUTO_SCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=2
